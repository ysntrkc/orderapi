{ // for path intelisense
    // required extension 'Path Intelisense'
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@root": [
                ""
            ],
            "@root/*": [
                "*"
            ],
            "@api": [
                "api"
            ],
            "@api/*": [
                "api/*"
            ],
            "@helpers": [
                "api/helpers"
            ],
            "@helpers/*": [
                "api/helpers/*"
            ],
            "@src": [
                "api/src"
            ],
            "@src/*": [
                "api/src/*"
            ],
            "@models": [
                "api/src/models"
            ],
            "@models/*": [
                "api/src/models/*"
            ],
        }
    }
}